@import 'nib';
@import './font-awesome.css';
@import './fonts.css';
@import './people.styl';
@import './projects.styl';
@import './publications.styl';
@import './contacts.styl';

*
  box-sizing border-box
  text-transform none

body
  font-size 16px
  color rgb(60,60,60)
  background-color #fff
  width 100vw
  line-height 130%
  font-family 'National'
  font-weight 100

p
  font-size 16px
  color rgb(60,60,60)
  background-color #fff
  line-height 130%
  font-family 'National'
  font-weight 100

a
  text-decoration none
  font-family 'National-Regular-Italic'
  font-weight 100
  outline 0
  color rgb(255,255,255)
  transition all .3s
  &, &:active, &:focus
    outline none
  &:hover
    color rgba(255,255,255,.8)

ul
  padding 0
  list-style-type none
  font-family 'National'
  font-weight 100


h2
  margin 0
  font-family 'National-Thin'
  font-weight 100



.fullscreen-bg
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden
  z-index -100
  @media screen and (max-width: 900px)
    //background-image url('/assets/bg_video_fallback.jpg')
    background-size cover

.fullscreen-bg-video
  @media screen and (max-width: 900px)
    display none
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  @media (min-aspect-ratio: 16/9)
    width: 100%
    height: auto
  @media (max-aspect-ratio: 16/9)
    width: auto
    height: 100%

.slide
  width 100%
  margin-bottom 80px
  .title
    font-variant small-caps
    font-size 60px
    font-weight 700
    // text-shadow 0 1px 0 rgba(0,0,0,.8)
    margin-bottom 20px
  .header
    position absolute
    text-align center
    top 50%
    left 50%
    @media screen and (max-width: 900px)
      width 90%

    width 100%
    transform translate(-50%, -50%)
    color #fff
    img
      padding-bottom 10px
      width 40%

  #sketchslide
    position absolute
    @media screen and (max-width: 900px)
      width 90%
    width 60%
    transform translate(-50%, -50%)
    color #fff

    .desc
      font-size 22px
      font-weight 200
      width 90%
      margin auto
      color rgba(0,0,0,.8)



  .header-stick
    display block
    position fixed
    text-align left
    left 0
    top 0
    // background linear-gradient(rgba(0,0,0,.5), rgba(0,0,0,0))
    width 100vw
    color #000000
    z-index 10
    .title
      display none
      float left
      padding-left 5%
      font-size 25px
    .menu
      float right
      padding-right 5%
      display inline-block
      line-height 70px
      // text-shadow 0 1px 0 rgba(0,0,0,.8)
      font-size 20px
      &:hover
        cursor pointer
    ul.menu-dropdown
      position fixed
      display none
      top 50px
      right 5%
      @media screen and (max-width: 900px)
        width 90vw
        left 5vw
      background-color rgba(0,0,0,.5)
      width 200px
      color #000000
      border-radius 3px
      padding-left 30px
      li
        line-height 40px
        transition transform .3s
        &:hover
          transform translateX(2px)
  .card
    width 90%
    // min-height 90%
    margin-left auto
    margin-right auto
    background-color rgba(255, 255, 255, .95)
    padding 40px 40px
    // border-radius 2px
    // box-shadow 0 0 25px rgba(0,0,0,.42)
    overflow hidden
    a
      color theme-gold
      &:hover
        color theme-gold-hover

  .subsection-title
    color theme-gold
    font-variant small-caps

  .subsection-content
    margin-top 30px
    font-size 14px

  #subsection-news
    @media (min-width: 1200px)
      border-top 2px solid theme-gold
      margin-top 50px
      padding-top 30px
    font-size 13px
    p
      margin-top 10px
      margin-bottom 15px
    .fa
      color theme-gold

  figure
    img
      padding-bottom 10px
      width 100%

    figcaption
      color theme-gold
      font-style italic

#intro
  min-height 90vh

.fa
  margin-right 8px

#project-examples
  list-style-type circle
  list-style-position outside
  font-size 75%

#subsection-titleblock
  margin-bottom 100px
  text-align center
  // padding 0 200px
  line-height 1.5
  color theme-gold
  figure
    img
      padding-bottom 10px
      width 90%

#subsection-titleblocktext
  padding 0 150px

#subsection-about-us
  img
    filter grayscale(100%)


@media (min-width: 1200px)
  #subsection-about-us, #subsection-people, #project-news-box, #threeblock
    display inline-block
    vertical-align top
    padding 0 20px
  #subsection-about-us
    width 30%
  #subsection-people
    width 70%
  #subsection-threeblock
    display inline-block
    width 33%
    padding 0 30px
    margin auto
    vertical-align top
    line-height 1.2
    #subsection-threeblockone, #subsection-threeblocktwo, #subsection-threeblockthree
        width 100%
        margin auto
        vertical-align top
        font-variant normal
        font-size 70%
  #project-news-box
    width 40%
    #subsection-projects, #subsection-news
      width 100%


@media (min-width: 900px) and (max-width: 1199px)
  #subsection-about-us, #subsection-people, #subsection-projects, #subsection-news, #publications, #subsection-threeblock
    display block
    margin auto
    width 75%
    font-size 75%
    padding 20px 0
  #subsection-threeblock
    p, ul, li
      font-size 75%
    padding-top 25px
  #subsection-titleblock
    figure
      img
        padding-bottom 10px
        width 75%




@media (max-width: 899px)
  .slide .card .header
    width: 90%;
    margin-left: auto;
    margin-right: auto;
    background-color: hsla(0,0%,100%,.95);
    padding: 0px;
    overflow: hidden;
    margin-bottom: 1pc;

  #intro
      img
        padding-bottom 10px
        width 70%

  #subsection-title
    font-size 200%

  #subsection-titleblocktext
    padding 0px

  #subsection-titleblock
    margin-bottom: 0pt;

  #subsection-people
    font-size 50%
    font-family 'National'

  #subsection-about-us, #subsection-people, #subsection-projects, #subsection-news, #publications, #subsection-threeblock
    display block
    margin auto
    width 100%
    font-size 90%
    padding 0
  #subsection-threeblock
    h2
      font-size 150%
      text-align: center
    padding-top 50px
